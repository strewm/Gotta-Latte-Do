extends layout

append head
    link(rel="stylesheet" href="/stylesheets/app.css")
    script(src="../javascripts/app.js" type="module" defer)



block content
    .task-pop-up-container
    .page
        nav.navbar
            input.navbar#searchBar(type="text", placeholder="Search here...")
            div.headerspace
            .top-right-nav
              div.welcome Welcome, !{' '}
              .current-user= currUser.username
              .exclamation !
              div.navbar#settings
                  img.navbar#settingsGear(src="../images/gear.png")
                  div.settingGroup.settingHide
                      div.settingHeaderGroup
                          img.settingHeader#userProfile(src="../images/favicon.png")
                          div.settingUserInfo
                            div.settingHeader#userName=currUser.username
                            div.settingHeader#userEmail=currUser.email
                      div.signOutContainer
                        button#signOut(type='submit') Sign Out
        div.sidebar
          div.logoContainer
              img.logo(src="../images/logo-text.png")
          ul.default-tasks
            li.all-tasks All Tasks
            li.due-today Daily Grind
            li.due-tomorrow Tomorroast
            li.overdue Better Latte Than Never!
            li.given-to-others Given to Others
            li.given-to-me Given To Me
            .list-sidebar
              label.pointer(for="list-drop") Lists
              div.add-boxes
                a.add-lists +
              input(type="checkbox" id="list-drop")
              div.lists-drop-container
                .add-list-form
                div.cloud(hidden)
                form.edit-form
                div
                div.list-list-sidebar
                  div.lists-grid-container
                  //- each list in myLists
                    //- div
                    //-   li.list-lists(id=`${list.id}`)=list.title
                    //- div
                    //-   a.delete-list(id=`${list.id}`) -

            ul
              div.contact-sidebar
                label.contacts-title.pointer(for="drop") Contacts

                div.add-boxes
                  a.add-contacts +
                input(type="checkbox" id="drop")
                div.contact-list-sidebar

                  if contactsAll
                    each contact in contactsAll
                      div.list-grid
                        div
                          li.contact-list(id=`${contact.id}`)=contact.username
                        div.delete-boxes
                          a.delete-contact(id=`${contact.id}`) -
              div.add-contact-sidebar
        div.tabbedContainer
            div.tabbedGroup
                a.tabbedLink#incomplete Incomplete
                a.tabbedLink#complete Completed

        div.summaryContainer
          div.summaryHeader
            div#tasksDueValue
            div#tasksOverdueValue
            div#tasksCompletedValue
          .updateList
          .newList
          div.fiona

        div.mainContainer
            include includes/add-task
            div.my-tasks
            .task-list
            .assigned-list
            .tanner


        //- include includes/add-task
        //- div.my-tasks
